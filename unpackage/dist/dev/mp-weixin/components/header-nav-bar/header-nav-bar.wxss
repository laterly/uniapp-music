.uni-app-placeholder {
  width: 100%;
  height: 64px;
}
.uni-h5-placeholder {
  width: 100%;
  height: 44px;
}
.uni-navbar--border {
  border: none !important;
  border-bottom-color: transparent !important;
}
.top-bar {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 44px;
}
.left-icon {
  margin-left: 30rpx;
  font-size: 40rpx;
  color: #8e8e8e;
}
.right-icon {
  font-size: 41rpx;
  color: #8e8e8e;
}
.nav-search {
  position: relative;
}
.nav-search .search-input {
  width: 530rpx;
  height: 60rpx;
  background-color: #f8f8f8 !important;
  border-radius: 120rpx;
  font-size: 25rpx;
  text-indent: 50rpx;
}
.nav-search .search-icon {
  position: absolute;
  right: 45rpx;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  color: #757575;
  font-size: 42rpx;
}

