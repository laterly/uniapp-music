.banner-container .uni-swiper-dots-horizontal {
  bottom: 35px !important;
}
.banner-container {
  width: 100vw;
  height: 340rpx;
  margin-top: -20rpx;
}
.banner-container .image-container {
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.banner-container .image-container .slide-image {
  width: 600rpx;
  height: 230rpx;
  z-index: 200;
  border-radius: 8rpx;
}
.banner-container .item-left {
  -webkit-box-pack: end;
  -webkit-justify-content: flex-end;
          justify-content: flex-end;
  padding: 56rpx 26rpx 0 0;
}
.banner-container .item-right {
  -webkit-box-pack: start;
  -webkit-justify-content: flex-start;
          justify-content: flex-start;
  padding: 56rpx 0 0 26rpx;
}
.banner-container .item-center {
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  padding: 56rpx 0 0 0;
}
.banner-container .desc-wrap {
  box-sizing: border-box;
  width: 100%;
  height: 98rpx;
  padding: 24rpx 66rpx 0;
}
.banner-container .desc-wrap .title {
  width: 100%;
  height: 42rpx;
  line-height: 42rpx;
  color: #222;
  font-size: 30rpx;
  font-family: 'PingFangTC-Regular';
  font-weight: 600;
  text-align: left;
}
.banner-container .desc-wrap .desc {
  margin-top: 4rpx;
  width: 100%;
  height: 34rpx;
  line-height: 34rpx;
  color: #999;
  font-size: 24rpx;
  font-family: 'PingFangTC-Regular';
  text-align: left;
}
@-webkit-keyframes descAnimation {
0% {
    opacity: 1;
}
25% {
    opacity: 0.5;
}
50% {
    opacity: 0;
}
75% {
    opacity: 0.5;
}
100% {
    opacity: 1;
}
}
.banner-container .hideAndShowDesc {
  animation: descAnimation 0.3s ease 1;
  -webkit-animation: descAnimation 0.3s ease 1;
}
@-webkit-keyframes descAnimation {
0% {
    opacity: 1;
}
25% {
    opacity: 0.5;
}
50% {
    opacity: 0;
}
75% {
    opacity: 0.5;
}
100% {
    opacity: 1;
}
}
@keyframes descAnimation {
0% {
    opacity: 1;
}
25% {
    opacity: 0.5;
}
50% {
    opacity: 0;
}
75% {
    opacity: 0.5;
}
100% {
    opacity: 1;
}
}

